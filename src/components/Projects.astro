---
import ProjectCard from "./ProjectCard.astro";
import placeholder from "../../public/assets/placeholderProject.jpg";
import { projects } from "../content/projects.json";
---

<section
  id="projects"
  class="flex flex-col w-full gap-24 md:items-start items-center"
>
  <h1 class="font-section text-4xl md:text-5xl">
    Take a Look At <span class="text-secondary">My Projects</span>
  </h1>
  <div class="flex flex-col gap-32 items-center justify-center md:text-lg">
    {
      projects.map((el) => {
        return (
          <ProjectCard
            title={el.title}
            img={placeholder}
            text={el.text}
            tags={el.tags}
            position={el.position}
          />
        );
      })
    }
  </div>
</section>
