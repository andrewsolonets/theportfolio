---
import funPic from "../../public/assets/funPic.svg";
import arrow from "../../public/assets/arrow.png";
import arrowMobile from "../../public/assets/arrowMobile.png";
---

<section
  class="flex w-full flex-col items-center gap-16 md:items-start md:gap-0"
>
  <div id="typewriter" class="text-center md:min-h-[144px] md:text-left"></div>
  <div class="relative self-end">
    <div
      class="absolute hidden animate-waving-arrow md:-left-28 md:top-64 md:flex"
    >
      <img src={arrow} class="w-32" alt="arrow" />
    </div>
    <div class="absolute -top-8 left-8 flex animate-waving-arrow md:hidden">
      <img src={arrowMobile} alt="mobileArrow" />
    </div>
    <div class="w-fit md:min-h-[500px] md:min-w-[700px]">
      <img
        src={funPic}
        alt="mainPicture"
        id="mainPic"
        class="w-[700px]"
        data-tilt
        data-tilt-reverse="true"
        data-tilt-max="12"
        data-tilt-speed="3000"
      />
    </div>
  </div>
</section>

<script>
  import Typewriter from "typewriter-effect/dist/core";
  import VanillaTilt from "vanilla-tilt";

  const selectedImg = document.getElementById("#mainPic");
  VanillaTilt.init(selectedImg as HTMLImageElement);

  const typewriter = new Typewriter("#typewriter", {
    autoStart: true,
    loop: true,
    wrapperClassName: "font-section text-4xl md:text-5xl md:leading-normal ",
    cursorClassName: "text-4xl md:text-5xl",
  });

  typewriter
    .typeString("Hi, Iâ€™m <span class='text-secondary'>Andrii Solonets</span>")
    .pauseFor(1000)
    .deleteChars(15)
    .typeString(" a Full-Stack developer")
    .pauseFor(2500)
    .start();

  // typewriter.typeString(" - a Full-Stack developer").pauseFor(2500).start();
</script>
